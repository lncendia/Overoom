@model Overoom.WEB.Contracts.Accounts.RegisterParameters;
@{
    ViewData["Title"] = "Регистрация";
}

<div class="col-lg-6">
    <h3>Регистрация</h3>
    <form asp-action="Register" method="post" class="form-horizontal">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="PasswordConfirm"></label>
                    <input asp-for="PasswordConfirm" class="form-control"/>
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <input class="btn shadow-none btn-dark" type="submit" value="Регистрация"/>
                </div>
            </div>
        </div>
    </form>
</div>