@model Overoom.WEB.Contracts.Settings.ChangeNameParameters

<form asp-action="ChangeName" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="row g-3">
            <div class="col-12">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-12">
                <input class="btn shadow-none btn-dark" type="submit" value="Сменить имя"/>
            </div>
        </div>
    </div>
</form>