@model Overoom.WEB.Models.Rooms.YoutubeRoom.CreateYoutubeRoomViewModel
@{
    ViewData["Title"] = "Создание комнаты";
}

<div class="col-lg-6">
    <h3>Создание комнаты</h3>
    <form asp-action="CreateDefault" method="post" class="form-horizontal">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Url"></label>
                    <input asp-for="Url" class="form-control"/>
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="remember" asp-for="AddAccess">
                        <label asp-for="AddAccess" class="form-check-label" for="remember"></label>
                    </div>
                </div>
                <div class="col-12">
                    <input class="btn shadow-none btn-dark" type="submit" value="Сохранить"/>
                </div>
            </div>
        </div>
    </form>
</div>