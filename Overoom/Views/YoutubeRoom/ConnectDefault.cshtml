@model Overoom.WEB.Models.Rooms.ConnectToRoomViewModel
@{
    ViewData["Title"] = "Подключение";
}
<div class="col-lg-6">
    <h3>Укажите свое имя</h3>
    <form asp-action="ConnectDefault" method="post" class="form-horizontal">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="row g-3">
                <input asp-for="RoomId" type="hidden"/>
                <div class="col-12">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <input class="btn shadow-none btn-dark" type="submit" value="Подключиться"/>
                </div>
            </div>
        </div>
    </form>
</div>