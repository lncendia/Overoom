@model Overoom.WEB.Contracts.Settings.ChangeAllowsParameters

<form asp-action="ChangeAllows" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="row g-3">
            <div class="col-12">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" asp-for="Beep" id="checkBeep">
                    <label asp-for="Beep" for="checkBeep"></label>
                    <span asp-validation-for="Beep" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" asp-for="Scream" id="checkScream">
                    <label asp-for="Scream" for="checkScream"></label>
                    <span asp-validation-for="Scream" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" asp-for="Change" id="checkChange">
                    <label asp-for="Change" for="checkChange"></label>
                    <span asp-validation-for="Change" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <input class="btn shadow-none btn-dark" type="submit" value="Изменить разрешения"/>
            </div>
        </div>
    </div>
</form>