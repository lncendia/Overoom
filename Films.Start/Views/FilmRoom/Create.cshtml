@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using Films.Start.WEB.Contracts.Rooms
@model FilmParameters
@{
    ViewData["Title"] = "Создание комнаты";
    var appAuth = await Context.AuthenticateAsync(IdentityConstants.ApplicationScheme);
}

<div class="col-lg-6">
    <h3>Создание комнаты</h3>
    @if (appAuth.None)
    {
        @await Html.PartialAsync("CreateAnonymously", new CreateFilmRoomAnonymouslyParameters { FilmId = Model.Id, Cdn = Model.CdnType })
    }
    else
    {
        @await Html.PartialAsync("CreateUser", new CreateFilmRoomParameters { FilmId = Model.Id, Cdn = Model.CdnType })
    }
</div>