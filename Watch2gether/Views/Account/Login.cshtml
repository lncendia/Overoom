@model Watch2gether.WEB.Models.Account.LoginViewModel;
@{
    ViewData["Title"] = "Вход";
}
<div class="row">
    <div class="col-lg-10">
        <div class="row gx-5">
            <div class="col-6 border-end">
                <h3>Вход в приложение</h3>
                <form asp-action="Login" method="post" class="form-horizontal pb-3">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <div class="row g-3">
                            <input asp-for="ReturnUrl" type="hidden">
                            <div class="col-12">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="remember" asp-for="RememberMe">
                                    <label asp-for="RememberMe" class="form-check-label" for="remember"></label>
                                </div>
                            </div>
                            <div class="col-12">
                                <input class="btn shadow-none btn-dark" type="submit" value="Войти"/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-6 border-start">
                <h3>Войти с помощью</h3>
                <a class="btn btn-secondary shadow-none mb-2" asp-action="LoginOauth" asp-route-provider="Vkontakte">
                    <img class="oauth" src="~/img/vkontakte.svg" alt="">
                </a>
                <a class="btn btn-secondary shadow-none mb-2" asp-action="LoginOauth" asp-route-provider="Yandex">
                    <img class="oauth" src="~/img/yandex.svg" alt="">
                </a>
            </div>
        </div>
        <div class="row gy-3">
            <div class="col-12">
                <a asp-action="Register">Впервые здесь? Зарегистрироваться</a>
            </div>
            <div class="col-12">
                <a asp-action="ResetPassword">Забыли пароль?</a>
            </div>
        </div>
    </div>
</div>