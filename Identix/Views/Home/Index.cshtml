@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["HomeTitle"];

    var name = User.Identity?.Name;
}

<div class="home">
    <nav class="navbar navbar-expand-sm">
        <div class="container-fluid">
            <div class="navbar-brand">Identix</div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/.well-known/openid-configuration" class="nav-link" aria-current="page">Discovery</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Grants" class="nav-link">@Localizer["Allows"]</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Settings" class="nav-link">@Localizer["Settings"]</a>
                    </li>
                    <li class="nav-item">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="Logout" class="nav-link">@Localizer["LogOut"]</a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="nav-link">@Localizer["SignIn"]</a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="logo">
        <div>
            <h1>@Localizer["Welcome"]</h1>
            @if (!string.IsNullOrEmpty(name))
            {
                <h3>@name</h3>
            }
        </div>
    </div>
</div>