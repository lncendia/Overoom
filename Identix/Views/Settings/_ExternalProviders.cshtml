@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<Identix.Infrastructure.Web.Settings.ViewModels.ExternalProvider>
@inject IViewLocalizer Localizer

@foreach (var provider in Model)
{
    var lover = provider.AuthenticationScheme.ToLower();
    <div class="oauth-block">
        <a asp-action="Challenge" asp-route-provider="@provider.AuthenticationScheme" class="provider @lover @(provider.IsAssociated ? "disabled" : "active")">
            <svg-icon class="icon" src="~/img/@(lover).svg" alt="provider icon"/>
            <div class="name">@provider.DisplayName</div>
            @if (provider.IsAssociated)
            {
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="check bi bi-check-lg" viewBox="0 0 16 16">
                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022"/>
                </svg>
            }
        </a>
        @if (provider.IsAssociated)
        {
            <div class="modal-btn" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-provider="@provider.AuthenticationScheme" data-bs-provider-name="@provider.DisplayName">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="check bi bi-x-lg" viewBox="0 0 16 16">
                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                </svg>
            </div>
        }
    </div>
}

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">@Localizer["UnlinkTitle"]</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Localizer["ConfirmationText"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                <a href="#" class="btn btn-primary">@Localizer["Unlink"]</a>
            </div>
        </div>
    </div>
</div>