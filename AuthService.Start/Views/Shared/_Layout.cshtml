@using AuthService.Application.Abstractions
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - @ApplicationConstants.ProjectName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/app.min.css"/>
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon">
    <link href="~/fonts/iconic/css/material-design-iconic-font.min.css" rel="stylesheet" type="text/css">
</head>
<body>

<partial name="_Culture"/>
<div class="body-container">
    <div class="card main-card col-9 col-sm-7 col-lg-5 col-xxl-4 px-md-5 px-3 py-3">
        <div class="card-body">
            @RenderBody()
        </div>
    </div>
</div>

<script src="~/js/app.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<partial name="_ValidationScriptsPartial"/>
</body>
</html>